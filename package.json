{
  "name": "figure-collector-version-manager",
  "version": "1.1.0",
  "description": "Standalone version management microservice for Figure Collector",
  "main": "index.js",
  "scripts": {
    "start": "node index.js",
    "dev": "node index.js",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "test:integration": "jest tests/integration"
  },
  "dependencies": {
    "cors": "^2.8.5",
    "express": "^4.18.2",
    "semver": "^7.7.2"
  },
  "devDependencies": {
    "jest": "^29.7.0",
    "supertest": "^6.3.4"
  },
  "jest": {
    "testEnvironment": "node",
    "collectCoverageFrom": [
      "*.js",
      "!node_modules/**",
      "!tests/**"
    ],
    "coverageDirectory": "coverage",
    "coverageReporters": [
      "text",
      "lcov",
      "html"
    ],
    "testMatch": [
      "**/__tests__/**/*.[jt]s?(x)",
      "**/?(*.)+(spec|test).[jt]s?(x)",
      "**/tests/**/*.[jt]s?(x)"
    ]
  },
  "engines": {
    "node": ">=18"
  }
}
