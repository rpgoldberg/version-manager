FROM node:20-alpine

WORKDIR /app

# Install bash and curl for test scripts and health checks
RUN apk add --no-cache bash curl

# Copy package files
COPY package*.json ./

# Install all dependencies (including dev dependencies for testing)
RUN npm install

# Copy application code and version.json
COPY . .

# Ensure test output directory exists
RUN mkdir -p /app/test-output

# Default to running tests; set RUN_SERVER=1 to start the service
# This allows the container to be used for both testing and integration scenarios
CMD ["sh", "-c", "if [ \"$RUN_SERVER\" = \"1\" ]; then npm start; else npm run test:coverage; fi"]